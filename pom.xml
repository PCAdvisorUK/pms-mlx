							<checksum>83eb4b1a4823daf3b5bea61958cf6097930f74fb</checksum>
						</artifactItem>

					</artifactItems>

				</configuration>

				<executions>

					<execution>
						<id>clean-external-dependencies</id>
						<phase>clean</phase>
						<goals>
							<!-- mvn com.savage7.maven.plugins:maven-external-dependency-plugin:clean-external -->
							<goal>clean-external</goal>
